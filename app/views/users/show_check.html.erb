<% provide(:title, @user.name) %>
<div>
  <table class = "table table-bordered table-condensed user-table">
    <tr>
      <td>
        <%= l(@first_day, format: :middle) %> 時間管理表
      </td>
      <td>
        指定勤務開始時間　<%= l(@user.designated_work_start_time, format: :time) %><br>
        指定勤務終了時間　<%= l(@user.designated_work_end_time, format: :time) %>
      </td> 
      <td colspan = "3">
        基本時間　<%= l(@user.basic_work_time, format: :time) %>
      </td>
      <td>初日　<%= l(@first_day, format: :short) %></td>
    </tr>
    
    <tr>
      <td>所属　<%= @user.affiliation.present? ? @user.affiliation : "未所属" %></td>
      <td>氏名　<%= @user.name %></td>
      <td>コード</td>
      <td>0921</td>
      <td>出勤日数　<%= @worked_sum %>日</td>
      <td>締め　<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>

<div>
  <table class = "table table-bordered table-condenced table-hover" id = "table-attendances">
    <thead>
      <tr>
        <th rowspan="3">残業申請</th>
        <th rowspan="3">日付</th>
        <th rowspan="3">曜日</th>
        <th colspan="8">【実績】</th>
        <th colspan="5">所定外勤務</th>
      </tr>
      <tr>
        <th colspan="3">出社</th>
        <th colspan="3">退社</th>
        <th rowspan="2">在社時間</th>
        <th rowspan="2">備考</th>
        <th colspan="2">終了時間</th>
        <th rowspan="2">時間外残業</th>
        <th rowspan="2">業務処理内容</th>
        <th rowspan="2">指示者確認㊞</th>
      </tr>
      <tr>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
      </tr>
    </thead>
    
    <tbody>
      <% @attendances.each do |day| %>
        <tr>                          
          <td></td>
          <td><%= l(day.worked_on, format: :short) %></td>
          <td class = "<%= sunday_or_saturday_color(day) %>"><%= $days_of_the_week[day.worked_on.wday] %></td>
          <td><%= day.started_at.hour if day.started_at.present? %></td>
          <td><%= format_minute_quarter(day.started_at) if day.started_at.present? %></td>
          <td class = "text-center"></td>
          <td><%= day.finished_at.hour if day.finished_at.present? %></td>
          <td><%= format_minute_quarter(day.finished_at) if day.finished_at.present? %></td>
          <td></td>
          <td>
            <% if day.started_at.present? && day.finished_at.present? %>
              <%= str_times = working_times(day.started_at, day.finished_at) %>
              <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
            <% end %>
          </td>
          <td><%= day.note %></td>
          <td><%= day.scheduled_end_time.hour if day.scheduled_end_time.present? %></td>
          <td><%= day.scheduled_end_time.min if day.scheduled_end_time.present? %></td>
          <td>
              <% if day.scheduled_end_time.present? %>
              <% overtime = format_basic_info(day.scheduled_end_time).to_f - format_basic_info(@user.designated_work_end_time).to_f %>
              <%= overtime %>
              <% end %>
          </td>
          <td><%= day.work_details %></td>
          <td><%= day.overtime_status %></td>
        </tr>
      <% end %>
    </tbody>
    
    <tfoot>
      <tr>
        <td colspan = "2"></td>
        <td colspan = "6"><%=  format("%.2f", @total_working_times.to_f)%></td>
        <td></td>
        <td></td>
      </tr>
    </tfoot>
  </table>
</div>