<% provide(:title, @user.name) %>
<div>
  <table class = "table table-bordered table-condensed user-table">
    <tr>
      <td>
        <%= l(@first_day, format: :middle) %> 時間管理表
      </td>
      <td>
        指定勤務開始時間　<%= l(@user.designated_work_start_time, format: :time) %><br>
        指定勤務終了時間　<%= l(@user.designated_work_end_time, format: :time) %>
      </td> 
      <td colspan = "3">
        基本時間　<%= l(@user.basic_work_time, format: :time) %>
      </td>
      <td>初日　<%= l(@first_day, format: :short) %></td>
    </tr>
    
    <tr>
      <td>所属　<%= @user.affiliation.present? ? @user.affiliation : "未所属" %></td>
      <td>氏名　<%= @user.name %></td>
      <td>コード</td>
      <td>0921</td>
      <td>出勤日数　<%= @worked_sum %>日</td>
      <td>締め　<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>

<div>
  <table class = "table table-bordered table-condenced table-hover" id = "table-attendances">
    <thead>
      <tr>
        <th rowspan="3">残業申請</th>
        <th rowspan="3">日付</th>
        <th rowspan="3">曜日</th>
        <th colspan="8">【実績】</th>
        <th colspan="5">所定外勤務</th>
      </tr>
      <tr>
        <th colspan="3">出社</th>
        <th colspan="3">退社</th>
        <th rowspan="2">在社時間</th>
        <th rowspan="2">備考</th>
        <th colspan="2">終了時間</th>
        <th rowspan="2">時間外残業</th>
        <th rowspan="2">業務処理内容</th>
        <th rowspan="2">指示者確認㊞</th>
      </tr>
      <tr>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
      </tr>
    </thead>
    
    <tbody>
      <% @attendances.each do |day| %>
        <tr>                          
          <td></td>
          <td><%= l(day.worked_on, format: :short) %></td>
          <td class = "<%= sunday_or_saturday_color(day) %>"><%= $days_of_the_week[day.worked_on.wday] %></td>
          <td><%= format_hour_quarter_start(day.finished_at_temporary) if day.started_at_temporary.present? %></td>
          <td><%= format_minute_quarter_start(day.started_at_temporary) if day.started_at_temporary.present? %></td>
          <td></td>
          <td><%= day.finished_at_temporary.hour if day.finished_at_temporary.present? %></td>
          <td><%= format_minute_quarter_finish(day.finished_at_temporary) if day.finished_at_temporary.present? %></td>
          <td></td>
          <td>
            <% if day.started_at_temporary.present? && day.finished_at_temporary.present? %>
              <%= str_times = time_spent_at_work(day.started_at_temporary, day.finished_at_temporary) %>
              <% @total_time_spent_at_work = @total_time_spent_at_work.to_f + str_times.to_f %>
            <% end %>
          </td>
          <td><%= day.note_temporary %></td>
          <td><%= day.scheduled_end_time_temporary.hour if day.scheduled_end_time_temporary.present? %></td>
          <td><%= day.scheduled_end_time_temporary.min if day.scheduled_end_time_temporary.present? %></td>
          <td><%= overtime_status(day.scheduled_end_time_temporary, @user.designated_work_end_time, @user.designated_work_start_time, @user, day) if day.scheduled_end_time_temporary %></td>
          <td><%= day.work_details_temporary %></td>
          <td><%= day.overtime_status %><br><%= day.one_month_status %></td>
        </tr>
      <% end %>
    </tbody>
    
    <tfoot>
      <tr>
        <td rowspan="2"></td>
        <td colspan="2">累計日数</td>
        <td colspan="5"></td>
        <td colspan="2">総合勤務時間</td>
        <td colspan="2">累計在社時間</td>
        <td></td>
        <td></td>
        <td></td>
        <td rowspan="2"></td>
      </tr>
      <tr>
        <td colspan="2"><%= days_num = @attendances.count %></td>
        <td colspan="5"></td>
        <td colspan="2">
          <% x = Attendance.where.not(finished_at: nil) %>
          <% y = 0 %>
          <% x.each do |day| %>
            <% y += 1 if day.worked_on >= Date.current.beginning_of_month %>
          <% end %>
          <%= @total_working_times = @total_time_spent_at_work - y * 1 %>
        </td>
        <td colspan="2"><%= @total_time_spent_at_work %></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
    </tfoot>
  </table>
</div>