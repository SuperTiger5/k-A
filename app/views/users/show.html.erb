<% provide(:title, @user.name) %>
<div>
  <table class = "table table-bordered table-condensed user-table">
    <tr>
      <td>
        <%= link_to "◀", user_path(date: @first_day.prev_month), class: "btn btn-primary btn-prev" %>
        <%= l(@first_day, format: :middle) %> 時間管理表
        <%= link_to "▶", user_path(date: @first_day.next_month), class: "btn btn-primary btn-next" %>
      </td>
      <td class = "z">指定勤務時間　<%= format_basic_info(@user.basic_work_time) %></td> 
      <td class = "z", colspan = "3"></td>
      <td class = "z">初日　<%= l(@first_day, format: :short) %></td>
    </tr>
    
    <tr>
      <td>所属　<%= @user.affiliation.present? ? @user.affiliation : "未所属" %></td>
      <td>氏名　<%= @user.name %></td>
      <td>コード</td>
      <td>0921</td>
      <td>出勤日数　<%= @worked_sum %>日</td>
      <td>締め　<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>

<div class = "edit-user">
  <%= link_to "勤怠編集", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-primary" %>
</div>

<div>
  <table class = "table table-bordered table-condenced table-hover" id = "table-attendances">
    <thead>
      <tr>
        <th rowspan = "3">残業申請</th>
        <th rowspan = "3">日付</th>
        <th rowspan = "3">曜日</th>
        <th colspan = "8">【実績】</th>
        <th colspan = "5">所定外勤務</th>
      </tr>
      <tr>
        <th colspan = "3">出社</th>
        <th colspan = "3">退社</th>
        <th rowspan = "2">在社時間</th>
        <th rowspan = "2">備考</th>
        <th colspan = "2">終了予定時間</th>
        <th rowspan = "2">時間外勤務</th>
        <th rowspan = "2">業務処理内容</th>
        <th rowspan = "2">指示者確認</th>
      </tr>
      <tr>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
      </tr>
    </thead>
    
    <tbody>
      <% @attendances.each do |day| %>
        <tr>
          <td><%= link_to "残業申請", "#", class: "btn btn-primary" %></td>
          <td><%= l(day.worked_on, format: :short) %></td>
          <td class = "<%= sunday_or_saturday_color(day) %>"><%= $days_of_the_week[day.worked_on.wday] %></td>
          <td><%= day.started_at.hour if day.started_at.present? %></td>
          <td><%= format_minute_quarter(day.started_at) if day.started_at.present? %></td>
          <td class = "text-center">
            <% if btn_text = attendance_state(day) %>
              <%= link_to "#{btn_text}", user_attendance_path(@user, day), method: :patch, class: "btn btn-default btn-block btn-secondary btn-attendance" %>
            <% end %>
          </td>
          <td><%= day.finished_at.hour if day.finished_at.present? %></td>
          <td><%= format_minute_quarter(day.finished_at) if day.finished_at.present? %></td>
          <td></td>
          <td>
            <% if day.started_at.present? && day.finished_at.present? %>
              <%= str_times = working_times(day.started_at, day.finished_at) %>
              <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
            <% end %>
          </td>
          <td><%= day.note %></td>
          <td>
            <% user = User.find(day.user_id) %>
            <%= user.designated_work_end_time.hour if user.designated_work_end_time %>
          </td>
          <td>
            <%= user.designated_work_end_time.min if user.designated_work_end_time %>
          </td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
    
    <tfoot>
      <tr>
        <td colspan = "2"></td>
        <td colspan = "6"><%=  format("%.2f", @total_working_times.to_f)%></td>
        <td></td>
        <td></td>
      </tr>
    </tfoot>
  </table>
</div>



