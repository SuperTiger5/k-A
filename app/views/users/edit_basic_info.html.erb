<% provide(:title, "Edit-Basic-Info") %>

<h1 class = "text-center">基本情報の更新</h1>
<div class = "row">
  <div class = "col-md-6 col-md-offset-3">
      <%= form_with(model: @user, url: update_basic_info_user_path, local: true) do |f| %>
      <%= render 'shared/error_messages', object: @user %>
    
      <%= f.label :basic_time, class: "basic-info-label" %>
      <%= f.time_field :basic_time, class: "form-control" %>

      <%= f.label :basic_work_time, class: "basic-info-label"  %>
      <%= f.time_field :basic_work_time, class: "form-control" %>
      
      <%= f.submit "編集", class: "btn btn-primary btn-block btn-edit-basic" %>
      <% end %>
  </div>
</div>