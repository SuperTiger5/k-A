<% provide(:title, "ユーザ一覧") %>
<h1 class = "text-center">
  ユーザー一覧
</h1>

<%= form_tag import_path, multipart: true do %>
  <%= file_field_tag :file %>
  <%= submit_tag "CSVをインポート", class: "btn btn-primary" %>
<% end %>

<table class="table">
  <% @users.each do |user| %>
    <tr>
      <td>
        <%= user.name %><br>
        <p></p>
        | <%= link_to "削除", user, method: :delete,
                            class: "btn btn-primary",
                            data: { confirm: "削除してもよろしいでしょうか？" } %><br>
         <p></p>
         <div class="panel-group">
            <div class="panel panel-default">
              <div class="panel-heading">
                <h4 class="panel-title">
                  <button type="button" data-toggle="collapse" data-target="#collapse<%= user.id %>" class="btn btn-primary btn-lg">編集</button>
                </h4>
              </div>
              <div id="collapse<%= user.id %>" class="panel-collapse collapse">
                <%= render 'users/form', {user: user} %>
            </div>
          </div>
      </td>
    </tr>
  <% end %>
</table>



