<%= form_with(model: @place, local: true) do |f| %>
      <%= render 'shared/error_messages', obj: @place %>
    
      <%= f.label :number, class: "label-#{yield(:class_text)}" %>
      <%= f.text_field :number, class: "form-control" %>

      <%= f.label :name, class: "label-#{yield(:class_text)}" %>
      <%= f.email_field :name, class: "form-control" %>
      
      <%= f.label :type, class: "label-#{yield(:class_text)}" %>
      <%= f.text_field :type, class: "form-control" %>

      <%= f.submit "追加", class: "btn btn-primary btn-block btn-#{yield(:class_text)}" %>
<% end %>