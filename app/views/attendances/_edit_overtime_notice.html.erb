<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h1 class="modal-title text-center">残業申請</h1>
    </div>
    <div class="modal-body">
      <%= form_with(model: @user, url: update_overtime_notice_user_attendances_path(@user), local: true, method: :patch) do |f| %>
      <% @attendances.each do |day| %>
      <%= f.fields_for 'attendances[]', day do |attendance| %>
        <table class="table table-bordered table-condensed table-striped">
          <thead>
            <tr>
              <th>日付</th>
              <th>曜日</th>
              <th>終了予定時間</th>
              <th>指定勤務終了時間</th>
              <th>時間外時間</th>
              <th>業務処理内容</th>
              <th>指示者確認㊞</th>
              <th>変更</th>
              <th>勤怠を確認する</th>
            </tr>
          </thead>
        
          <tbody>
            <tr>
              <td><%= l(day.worked_on, format: :short) %></td>
              <td><%= $days_of_the_week[day.worked_on.wday] %></td>
              <td><%= l(User.find(day.user_id).designated_work_end_time, format: :time) %></td>
              <td><%= l(day.scheduled_end_time, format: :short) %></td>
              <td>
                <% overtime = format_basic_info(day.scheduled_end_time).to_f - format_basic_info(User.find(day.user_id).designated_work_end_time).to_f %>
                <%= overtime %>
               </td>
              <td><%= day.work_details %></td>
              <td>
                <%= attendance.select :overtime_check, ['なし', '申請中', '承認', '否認'], {include_blank: true}, class: "form_control" %>
              </td>
              <td><%= attendance.check_box :overtime_change %></td>
              <td><%= link_to "確認", day.user_id, class: "btn btn-primary" %></td>
            </tr>
          </tbody>
        </table>
      <% end %>
      <% end %>
      <%= f.submit "変更を送信する", class: "btn btn-primary btn-block" %>
      <% end %>
    </div>
  </div>
</div>